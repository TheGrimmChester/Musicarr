{% extends 'base.html.twig' %}

{% block title %}Task #{{ task.id }} - {{ task.type|replace({'_': ' '})|title }}{% endblock %}

{% block stylesheets %}
    <style>
        .task-status-large {
            font-size: 1.2rem;
            padding: 0.5rem 1rem;
        }
        .metadata-card {
            background-color: var(--light-bg);
            border-left: 4px solid var(--accent-color);
        }
        .timeline-item {
            position: relative;
            padding-left: 2rem;
            margin-bottom: 1rem;
        }
        .timeline-item::before {
            content: '';
            position: absolute;
            left: 0.5rem;
            top: 0.5rem;
            width: 0.5rem;
            height: 0.5rem;
            background-color: var(--accent-color);
            border-radius: 50%;
        }
        .timeline-item.completed::before { background-color: var(--accent-secondary); }
        .timeline-item.failed::before { background-color: var(--danger-color); }
        .timeline-item.cancelled::before { background-color: var(--text-muted); }
        .timeline-item.running::before {
            background-color: var(--accent-color);
            animation: pulse 1s infinite;
        }
        @keyframes pulse {
            0% { opacity: 1; }
            50% { opacity: 0.5; }
            100% { opacity: 1; }
        }
        .json-viewer {
            background-color: var(--light-bg);
            border: 1px solid var(--border-color);
            border-radius: 0.375rem;
            padding: 1rem;
            font-family: 'Courier New', monospace;
            font-size: 0.9rem;
            max-height: 300px;
            overflow-y: auto;
        }
        .auto-refresh-badge {
            position: fixed;
            top: 80px;
            right: 20px;
            z-index: 1000;
        }
    </style>
{% endblock %}

{% block body %}
{% from 'partials/_breadcrumbs.html.twig' import render_breadcrumbs %}

{% set breadcrumbs = [
    {'text': 'breadcrumb.home'|trans, 'url': path('home'), 'icon': 'fas fa-home'},
    {'text': 'nav.tasks'|trans, 'url': path('tasks_index'), 'icon': 'fas fa-tasks'},
    {'text': 'tasks.show'|trans|replace({'%id%': task.id}), 'url': null, 'active': true, 'icon': 'fas fa-info-circle'}
] %}

{{ render_breadcrumbs(breadcrumbs, {showIcons: true}) }}

<div class="container-fluid" data-controller="task-show" data-task-show-task-id-value="{{ task.id }}" data-task-show-task-status-value="{{ task.status }}" data-task-show-is-active-value="{{ task.isActive ? 'true' : 'false' }}">
    <!-- Auto-refresh badge -->
                        <div id="auto-refresh-badge" class="auto-refresh-badge badge bg-primary hidden" data-task-show-target="autoRefreshBadge">
        <i class="fas fa-sync-alt fa-spin me-1"></i>
        Auto-refreshing...
    </div>

    <!-- Header -->
    <div class="row mb-4">
        <div class="col">
            <h1 class="h2 mb-0">
                <i class="fas fa-task me-2"></i>
                Task #{{ task.id }}
            </h1>
            <p class="text-muted mb-0">{{ task.type|replace({'_': ' '})|title }}</p>
        </div>
        <div class="col-auto">
            {% if task.isActive %}
                <button class="btn btn-warning" data-action="click->task-show#cancelTask">
                    <i class="fas fa-stop me-1"></i>Cancel Task
                </button>
            {% endif %}
            {% if task.status == 'failed' %}
                <button class="btn btn-success" data-action="click->task-show#retryTask">
                    <i class="fas fa-redo me-1"></i>Retry Task
                </button>
            {% endif %}
            <button class="btn btn-outline-primary" data-action="click->task-show#refreshTask">
                <i class="fas fa-sync-alt me-1"></i>Refresh
            </button>
        </div>
    </div>

    <div class="row">
        <!-- Main Task Information -->
        <div class="col-lg-8">
            <!-- Status Card -->
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle me-1"></i>Task Information
                    </h5>
                    <div id="task-status-container">
                        {% set statusClass = task.status == 'completed' ? 'success' :
                                          (task.status == 'failed' ? 'danger' :
                                          (task.status == 'running' ? 'info' :
                                          (task.status == 'cancelled' ? 'secondary' : 'warning'))) %}
                        <span class="badge bg-{{ statusClass }} task-status-large" id="task-status-badge" data-task-show-target="statusBadge">
                            {% if task.status == 'running' %}
                                <i class="fas fa-spinner fa-spin me-1"></i>
                            {% endif %}
                            {{ task.status|title }}
                        </span>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Type:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-secondary">{{ task.type|replace({'_': ' '})|title }}</span>
                                </dd>

                                <dt class="col-sm-4">Priority:</dt>
                                <dd class="col-sm-8">
                                    {% if task.priority > 0 %}
                                        <span class="badge bg-primary">{{ task.priority }}</span>
                                    {% else %}
                                        <span class="text-muted">Normal (0)</span>
                                    {% endif %}
                                </dd>

                                <dt class="col-sm-4">Created:</dt>
                                <dd class="col-sm-8">{{ task.createdAt|date('Y-m-d H:i:s') }}</dd>

                                {% if task.startedAt %}
                                    <dt class="col-sm-4">Started:</dt>
                                    <dd class="col-sm-8">{{ task.startedAt|date('Y-m-d H:i:s') }}</dd>
                                {% endif %}

                                {% if task.completedAt %}
                                    <dt class="col-sm-4">Completed:</dt>
                                    <dd class="col-sm-8">{{ task.completedAt|date('Y-m-d H:i:s') }}</dd>
                                {% endif %}
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                {% if task.entityMbid %}
                                    <dt class="col-sm-4">Entity MBID:</dt>
                                    <dd class="col-sm-8">
                                        <code>{{ task.entityMbid }}</code>
                                    </dd>
                                {% endif %}

                                {% if task.entityId %}
                                    <dt class="col-sm-4">Entity ID:</dt>
                                    <dd class="col-sm-8">{{ task.entityId }}</dd>
                                {% endif %}

                                {% if task.entityName %}
                                    <dt class="col-sm-4">Entity Name:</dt>
                                    <dd class="col-sm-8">
                                        <strong>{{ task.entityName }}</strong>
                                    </dd>
                                {% endif %}

                                {% if task.uniqueKey %}
                                    <dt class="col-sm-4">Unique Key:</dt>
                                    <dd class="col-sm-8">
                                        <code>{{ task.uniqueKey }}</code>
                                    </dd>
                                {% endif %}

                                {% if task.duration %}
                                    <dt class="col-sm-4">Duration:</dt>
                                    <dd class="col-sm-8" id="task-duration">
                                        <span class="badge bg-light text-dark">{{ task.duration }}s</span>
                                    </dd>
                                {% endif %}
                            </dl>
                        </div>
                    </div>

                    {% if task.errorMessage %}
                        <div class="alert alert-danger mt-3">
                            <h6 class="alert-heading">
                                <i class="fas fa-exclamation-triangle me-1"></i>Error Message
                            </h6>
                            <pre class="mb-0">{{ task.errorMessage }}</pre>
                        </div>
                    {% endif %}
                </div>
            </div>

            <!-- Metadata Card -->
            {% if task.metadata %}
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-code me-1"></i>Task Metadata
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="json-viewer" id="metadata-viewer">
                            {{ task.metadata|json_encode(constant('JSON_PRETTY_PRINT'))|nl2br }}
                        </div>
                    </div>
                </div>
            {% endif %}

            <!-- Timeline -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-history me-1"></i>Task Timeline
                    </h5>
                </div>
                <div class="card-body">
                    <div class="timeline">
                        <div class="timeline-item">
                            <strong>Task Created</strong>
                            <div class="text-muted">{{ task.createdAt|date('Y-m-d H:i:s') }}</div>
                        </div>

                        {% if task.startedAt %}
                            <div class="timeline-item {{ task.status == 'running' ? 'running' : '' }}">
                                <strong>Task Started</strong>
                                <div class="text-muted">{{ task.startedAt|date('Y-m-d H:i:s') }}</div>
                            </div>
                        {% endif %}

                        {% if task.completedAt %}
                            <div class="timeline-item {{ task.status }}">
                                <strong>Task {{ task.status|title }}</strong>
                                <div class="text-muted">{{ task.completedAt|date('Y-m-d H:i:s') }}</div>
                                {% if task.duration %}
                                    <div class="text-muted small">Duration: {{ task.duration }} seconds</div>
                                {% endif %}
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Quick Actions -->
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="fas fa-bolt me-1"></i>Quick Actions
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        {% if task.isActive %}
                            <button class="btn btn-warning" data-action="click->task-show#cancelTask">
                                <i class="fas fa-stop me-1"></i>Cancel Task
                            </button>
                        {% endif %}

                        {% if task.status == 'failed' %}
                                                <button class="btn btn-success" data-action="click->task-show#retryTask">
                        <i class="fas fa-redo me-1"></i>Retry Task
                    </button>
                        {% endif %}

                        <button class="btn btn-outline-primary" data-action="click->task-show#refreshTask">
                            <i class="fas fa-sync-alt me-1"></i>Refresh Status
                        </button>

                        <a href="{{ path('tasks_index') }}" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Back to Tasks
                        </a>

                        <button class="btn btn-outline-info" id="toggle-auto-refresh" data-task-show-target="toggleAutoRefresh">
                            <i class="fas fa-play me-1"></i>Auto Refresh
                        </button>
                    </div>
                </div>
            </div>

            <!-- Related Tasks -->
            {% if relatedTasks %}
                <div class="card mb-4">
                    <div class="card-header">
                        <h6 class="mb-0">
                            <i class="fas fa-link me-1"></i>Related Tasks
                        </h6>
                    </div>
                    <div class="card-body">
                        {% for relatedTask in relatedTasks %}
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <div>
                                    <a href="{{ path('tasks_show', {id: relatedTask.id}) }}" class="text-decoration-none">
                                        #{{ relatedTask.id }}
                                    </a>
                                    <small class="text-muted d-block">{{ relatedTask.type|replace({'_': ' '})|title }}</small>
                                </div>
                                <div>
                                    {% set statusClass = relatedTask.status == 'completed' ? 'success' :
                                                      (relatedTask.status == 'failed' ? 'danger' :
                                                      (relatedTask.status == 'running' ? 'info' :
                                                      (relatedTask.status == 'cancelled' ? 'secondary' : 'warning'))) %}
                                    <span class="badge bg-{{ statusClass }}">{{ relatedTask.status }}</span>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}

            <!-- Task Statistics -->
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="fas fa-chart-bar me-1"></i>Task Statistics
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6">
                            <div class="h4 text-primary mb-0">{{ task.priority }}</div>
                            <small class="text-muted">Priority</small>
                        </div>
                        <div class="col-6">
                            <div class="h4 text-info mb-0" id="duration-display" data-task-show-target="durationDisplay">
                                {% if task.duration %}
                                    {{ task.duration }}s
                                {% else %}
                                    -
                                {% endif %}
                            </div>
                            <small class="text-muted">Duration</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Cancel Modal -->
<div class="modal fade" id="cancelModal" tabindex="-1" data-task-show-target="cancelModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Cancel Task</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="POST" action="{{ path('tasks_cancel', {id: task.id}) }}">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="cancel-reason" class="form-label">Reason for cancellation:</label>
                        <textarea name="reason" id="cancel-reason" class="form-control" rows="3" placeholder="Enter reason for cancelling this task...">Cancelled by user</textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-warning">Cancel Task</button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}


